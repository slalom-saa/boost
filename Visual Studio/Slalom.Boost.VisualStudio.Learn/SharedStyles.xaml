<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Slalom.Boost.Learn">
    <Style TargetType="{x:Type FlowDocument}">
        <Setter Property="PagePadding" Value="10"></Setter>
    </Style>
    <Style TargetType="{x:Type Paragraph}">
        <Setter Property="FontFamily" Value="Calibri"></Setter>
        <Setter Property="Margin" Value="0 0 0 15"></Setter>
    </Style>
    <Style TargetType="{x:Type List}">
        <Setter Property="MarkerStyle" Value="Decimal"></Setter>
        <Setter Property="FontFamily" Value="Calibri"></Setter>
        <Setter Property="MarkerOffset" Value="10"></Setter>
        <Setter Property="Padding" Value="25 0 0 0"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
    </Style>
    <Style TargetType="{x:Type ListItem}">
        <Setter Property="Margin" Value="0 5 0 0"></Setter>
        <Style.Resources>
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="TextAlignment" Value="Left"></Setter>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>